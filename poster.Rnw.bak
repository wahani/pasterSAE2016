\mysec{Fay Herriot (FH) Model}

\begin{multicols}{2}[\setlength{\columnseprule}{0pt}]

\noindent
\textbf{Sampling Model}: \hspace{0.5cm} $\tilde{y}_i = \theta_i + e_i$ \\[0.1cm]
\textbf{Linking Model}: \hspace{1.1cm} $\theta_i = x^\top_i\beta + u_i$ \\[0.1cm]
\textbf{FH Model}: \hspace{2.8cm} $\tilde{y}_i = \underbrace{x^\top_i\beta + u_i}_{\theta_i} + e_i$

\begin{itemize}
  % \item \cite{Fay79}
  \item Uses only area-level information %Can be used if no unit-level information is available
  \item Improves MSE of area estimator %-- when compared to a direct estimator, relies on an unbiased direct estimator 
  \item Distribution of $e_i$ is known %-- in practice $\sigma^2_{e, d}$ is assumed to be the (estimated) variance of $\tilde{y}_d$
  \item EBLUP:
  \begin{itemize}
    \item[ ] $\hat{\theta}^{FH}_i = \hat{\gamma}_i\tilde{y}_i + (1 - \hat{\gamma}_i)x^\top_i\hat{\beta} $
    \item[ ] $\hat{\gamma}_i = \hat{\sigma}_u^2/(\hat{\sigma}_u^2 + \sigma^2_{e, i})$
  \end{itemize}
  
\end{itemize}
%
\columnbreak
%
\begin{itemize}
    \item $i = 1, \dots, D$
		\item $\tilde{y}_i$: direct estimator of area statistic
		\item $\theta_i$: true area statistic
    \item $x_i$: area-level auxiliary information
    \item $\beta$: vector of regression coefficients
		\item $e_i \sim N(0, \sigma^2_{e, i})$ -- known
		\item $u_i \sim N(0, \sigma_v^2) \text{ i.i.d.}$
\end{itemize}


\end{multicols}

%------------------------------------------------

\mysec{Robust Fay Herriot (RFH) Model}

%------------------------------------------------
\begin{multicols}{2}[\setlength{\columnseprule}{0pt}]
\fboxsep5mm
\fbox{\parbox[c]{16cm}{\textbf{Robust EBLUP} under a Fay Herriot Model:
\[\hat{\theta}^{RFH}_i = x^\top_i\hat{\beta}^\psi + \hat{u}_i^\psi\]

\begin{itemize}
  \item Replace model parameters with robust \\ versions $\beta^\psi$, $u_i^\psi$ (and $\sigma_u^\psi$)
  \item Use robustified mixed model estimation \\ equations
\end{itemize}
}}

\columnbreak

\noindent Mixed Model: \hspace{0.3cm} $\mathbf{y} = \mathbf{X} \beta + \mathbf{Z} \mathbf{u} + \mathbf{e}$
\begin{itemize}
  \item $\mathbf{u} \sim \mathit{N}(0, \mathbf{G})$
  \item $\mathbf{e} \sim \mathit{N}(0, \mathbf{R})$
  \item $\mathbf{V} = \mathbf{Z}\mathbf{G}\mathbf{Z}^\top + \mathbf{R}$
  \item (FH/RFH) $\mathbf{R}$ is assumed to be known. $\mathbf{G}$ needs to be estimated
\end{itemize}
\end{multicols}


%------------------------------------------------
\vspace{1cm}
Robustified mixed model equations for the RFH:

% \begin{eqnarray*}
% \mathbf{X}^\top\mathbf{V}^{-1}\left(\mathbf{y}-\mathbf{X}\beta\right) &=& 0 \\
% \left(\mathbf{y}-\mathbf{X}\beta\right)^\top\mathbf{V}^{-1}\frac{\partial\mathbf{V}}{\partial\theta_l}\mathbf{V}^{-1}\left(\mathbf{y}-\mathbf{X}\beta\right) - \tr\left(\mathbf{V}^{-1}\frac{\partial\mathbf{V}}{\partial\theta_l}\right) &=& 0 
% \end{eqnarray*}

\begin{eqnarray}
\mathbf{X}^\top\mathbf{V}^{-1} \mathbf{U}^{\frac{1}{2}} \psi(\mathbf{r}) &=& 0 \\
\psi(\mathbf{r})^\top\mathbf{U}^{\frac{1}{2}}\mathbf{V}^{-1}\frac{\partial\mathbf{G}}{\partial\sigma_u^2}\mathbf{V}^{-1}\mathbf{U}^{\frac{1}{2}} \psi(\mathbf{r}) - \tr\left(\mathbf{V}^{-1}\frac{\partial\mathbf{G}}{\partial\sigma_u^2}K\right) &=& 0\\
\mathbf{Z}^\top \mathbf{R}^{-\frac{1}{2}} \psi\left(\mathbf{R}^{-\frac{1}{2}} (\mathbf{y} - \mathbf{X}\beta - \mathbf{Z}\mathbf{u})\right) - \mathbf{G}^{-\frac{1}{2}}\psi(\mathbf{G}^{-\frac{1}{2}}\mathbf{u}) &=& 0
\end{eqnarray}

\vspace{0.5cm}
\begin{multicols}{2}[\setlength{\columnseprule}{0pt}]

\begin{itemize}
  \item $\mathbf{U}$: matrix of diagonal elements of $\mathbf{V}$
%\item $K = c\mathbf{I}$ with $c = E()$
  \item $\mathbf{r} = \mathbf{U}^{-\frac{1}{2}} \left(\mathbf{y}-\mathbf{X}\beta\right)$
  \item $\psi(u) = u \min\left(1, \frac{b}{|u|}\right)$
  \item The equations need to be solved iteratively
  \begin{enumerate}
    \item Solve equation 1 for $\beta^\psi$
    \item Given $\beta^\psi$ solve equation 2 for $\sigma_u^\psi$
    \item Iterate over steps 1 and 2 until $\beta^\psi$ and $\sigma_u^\psi$ converge
    \item Given $\beta^\psi$ and $\sigma_u^\psi$ solve equation 3 for $u^\psi$
  \end{enumerate}
\end{itemize}

\columnbreak

% \includegraphics[width=16cm]{psiFunction.pdf}

\end{multicols}



